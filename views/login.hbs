<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>DayLaborers Admin</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="/fontawesome-free/css/all.min.css">
  <!-- Theme style --> 
  <link rel="stylesheet" href="/css/adminlte.min.css">
</head>

<body class="login-page"> 
  <div class="login-box">
    <div class="login-logo">
      <a href="#"> <img src="/img/logo.png" alt="e-diaristas" height="50"></a>
      <b>Admin</b>
    </div>
  </div>

  <div class="card card-outline card-primary">
    <div class="card-header">
      <h3 class="card-title float-none text-center">
        Entre para iniciar uma nova sess√£o
      </h3>
    </div>
    <div class="card-body login-card-body">
      <form action="/admin/login" method="post">
        <div class="input-group mb-3">
           <input type="email" class="form-control {{class}}" name="username" placeholder="Email" value="">
            <div class="input-group-append">
               <div class="input-group-text">
                 <span class="fas fa-envelope"></span>
               </div>
            </div>
        </div>

        <div class="input-group mb-3">
           <input type="password" class="form-control {{class}}" name="password" placeholder="Senha" value="">
            <div class="input-group-append">
               <div class="input-group-text">
                 <span class="fas fa-lock"></span>
               </div>
            </div>
        </div>

        <div class="row">
          <div class="col-12">
            <div class="text-center text-danger">
              {{loginError}}
            </div>
            <button type="submit" class="btn btn-block btn-flat btn-primary">
              <span class="fas fa-sign-in-alt">
                Entrar
              </span>
            </button>

            <div class="mt-1 text-center">
              <span>
                <a href="#">Esqueci a Senha</a>
              </span>
            </div>
          </div>
        </div>

       
      </form>
    </div>
  </div>


<script src="/js/jquery/jquery.min.js"></script>
<script src="/js/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/js/adminlte/adminlte.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
</body>
</html>
